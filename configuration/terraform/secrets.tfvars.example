################################################################################
# Kelix Azure Terraform Secrets Configuration Template
#
# IMPORTANT: This file contains ONLY sensitive values (passwords, keys, tokens, etc.)
# Non-sensitive configuration values are stored in config.tfvars
#
# SECURITY REQUIREMENTS:
# - This file MUST be added to .gitignore to prevent accidental commits
# - Store securely and never share publicly
# - Use only in secure environments
# - Consider using Azure Key Vault or environment variables for production
#
# USAGE:
# 1. Copy this file to secrets.tfvars
# 2. Replace all placeholder values with your actual sensitive data
# 3. Ensure this file is never committed to version control
################################################################################

# -----------------------------------------------------------------------------
# Hub Infrastructure Secrets
# -----------------------------------------------------------------------------

# Hub PostgreSQL admin password
# Requirements: 8+ characters, uppercase, lowercase, numbers, special characters
hub_postgresql_admin_password = "REPLACE_WITH_SECURE_PASSWORD"

# Hub VM admin password
# Requirements: 12+ characters, uppercase, lowercase, numbers, special characters
hub_vm_admin_password = "REPLACE_WITH_SECURE_PASSWORD"

# Hub Agent VM admin password
hub_agent_vm_admin_password = "REPLACE_WITH_SECURE_PASSWORD"

# AI Spoke VM admin password
spoke_ai_vm_admin_password = "REPLACE_WITH_SECURE_PASSWORD"

# -----------------------------------------------------------------------------
# Application Admin Configuration
# -----------------------------------------------------------------------------

# Admin account email for application setup
admin_account_email = "admin@your-domain.com"

# Admin account password for application
admin_account_password = "REPLACE_WITH_SECURE_PASSWORD"

# Default password for new user accounts
default_password = "REPLACE_WITH_DEFAULT_PASSWORD"

# -----------------------------------------------------------------------------
# Application Insights Secrets
# -----------------------------------------------------------------------------

# Application Insights instrumentation key
# Obtain from Azure Portal > Application Insights > Overview
appinsights_instrumentation_key = "REPLACE_WITH_INSTRUMENTATION_KEY"

# Application Insights connection string
# Obtain from Azure Portal > Application Insights > Overview
applicationinsights_connection_string = "InstrumentationKey=REPLACE_WITH_KEY;IngestionEndpoint=https://REGION.in.applicationinsights.azure.com/;LiveEndpoint=https://REGION.livediagnostics.monitor.azure.com/;ApplicationId=REPLACE_WITH_APP_ID"

# -----------------------------------------------------------------------------
# Azure AI Search Secrets
# -----------------------------------------------------------------------------

# Azure AI Search endpoint URL
# Format: https://YOUR_SEARCH_SERVICE.search.windows.net
azure_ai_search_endpoint = "https://YOUR_SEARCH_SERVICE.search.windows.net"

# Azure AI Search query key
# Obtain from Azure Portal > AI Search > Keys
azure_ai_search_query_key = "REPLACE_WITH_SEARCH_QUERY_KEY"

# -----------------------------------------------------------------------------
# Azure Blob Storage Secrets
# -----------------------------------------------------------------------------

# Azure Blob Storage base URL
# Format: https://YOUR_STORAGE_ACCOUNT.blob.core.windows.net
azure_blob_base_url = "https://YOUR_STORAGE_ACCOUNT.blob.core.windows.net"

# Azure Storage account key
# Obtain from Azure Portal > Storage Account > Access Keys
azure_storage_account_key = "REPLACE_WITH_STORAGE_ACCOUNT_KEY"

# Azure Storage connection string
# Obtain from Azure Portal > Storage Account > Access Keys
azure_storage_connection_string = "DefaultEndpointsProtocol=https;AccountName=YOUR_STORAGE_ACCOUNT;AccountKey=REPLACE_WITH_KEY;EndpointSuffix=core.windows.net"

# -----------------------------------------------------------------------------
# Azure OpenAI Secrets
# -----------------------------------------------------------------------------

# Azure OpenAI base URL
# Format: https://YOUR_OPENAI_SUBDOMAIN.openai.azure.com
azure_openai_base_url = "https://YOUR_OPENAI_SUBDOMAIN.openai.azure.com"

# Azure OpenAI API key
# Obtain from Azure Portal > Azure OpenAI > Keys and Endpoint
azure_openai_key = "REPLACE_WITH_OPENAI_API_KEY"

# -----------------------------------------------------------------------------
# Azure Email Service Secrets
# -----------------------------------------------------------------------------

# Azure Email service connection string
# Obtain from Azure Portal > Communication Services > Keys
azure_email_connection_string = "endpoint=https://YOUR_EMAIL_SERVICE.REGION.communication.azure.com/;accesskey=REPLACE_WITH_ACCESS_KEY"

# -----------------------------------------------------------------------------
# Database Secrets
# -----------------------------------------------------------------------------

# PostgreSQL database connection URL
# Format: postgresql://SERVER:5432/DATABASE?user=USERNAME&password=PASSWORD&sslmode=require
database_url = "postgresql://YOUR_SERVER.postgres.database.azure.com:5432/postgres?user=USERNAME&password=PASSWORD&sslmode=require"

# -----------------------------------------------------------------------------
# Databricks Secrets (if using Databricks integration)
# -----------------------------------------------------------------------------

# Databricks access token
# Obtain from Databricks workspace > User Settings > Access Tokens
databricks_access_token = "REPLACE_WITH_DATABRICKS_TOKEN"

# Databricks job JWT token
databricks_job_jwt_token = "REPLACE_WITH_JOB_JWT_TOKEN"

# Databricks vector JWT token
databricks_vector_jwt_token = "REPLACE_WITH_VECTOR_JWT_TOKEN"

# -----------------------------------------------------------------------------
# SSL Certificate Secrets
# -----------------------------------------------------------------------------

# SSL certificate password for Application Gateway
# Password for the PFX certificate file
spoke_api_ag_ssl_certificate_password = "REPLACE_WITH_CERTIFICATE_PASSWORD"

# -----------------------------------------------------------------------------
# Additional Secrets (Optional)
# -----------------------------------------------------------------------------

# Custom API keys for third-party integrations
# custom_api_key = "REPLACE_WITH_CUSTOM_API_KEY"

# Service principal secrets (if using service principal authentication)
# service_principal_client_secret = "REPLACE_WITH_CLIENT_SECRET"

# Container registry passwords (if not using managed identity)
# container_registry_password = "REPLACE_WITH_REGISTRY_PASSWORD"

################################################################################
# SECURITY CHECKLIST:
#
# Before using this file:
# ✅ All placeholder values have been replaced with actual secrets
# ✅ Passwords meet complexity requirements (12+ chars, mixed case, numbers, symbols)
# ✅ File is added to .gitignore
# ✅ File permissions are restricted (chmod 600)
# ✅ Secrets are stored securely (consider Azure Key Vault for production)
# ✅ No secrets are hardcoded in Terraform files
#
